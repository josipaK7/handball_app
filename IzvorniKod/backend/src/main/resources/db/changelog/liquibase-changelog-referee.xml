<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="202107" author="josipak">
        <createSequence sequenceName="referee_id" incrementBy="1" cycle="false" startValue="100"/>

        <createTable tableName="referee">
            <column name="referee_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="origin_country" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="active_from_date" type="DATE">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>