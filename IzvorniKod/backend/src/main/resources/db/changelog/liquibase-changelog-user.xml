<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="202107" author="josipak">
        <createSequence sequenceName="id_seq" incrementBy="1" cycle="false" startValue="100"/>

        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="date_of_birth" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="place" type="VARCHAR(128)">
                <constraints nullable="true"/>
            </column>
            <column name="description" type="VARCHAR(128)">
                <constraints nullable="true"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint baseTableName="user"
                                 baseColumnNames="role_id"
                                 constraintName="role_id_user_fkey"
                                 referencedTableName="role"
                                 referencedColumnNames="role_id"
                                 onDelete="NO ACTION"
                                 onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>