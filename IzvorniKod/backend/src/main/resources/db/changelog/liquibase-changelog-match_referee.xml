<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="202107" author="josipak">

        <createTable tableName="match_referee">
            <column name="match_id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="referee_id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="match_referee"
                                 baseColumnNames="match_id"
                                 constraintName="match_referee_match_id_fkey"
                                 referencedTableName="match"
                                 referencedColumnNames="match_id"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"/>
        <addForeignKeyConstraint baseTableName="match_referee"
                                 baseColumnNames="referee_id"
                                 constraintName="match_referee_referee_id_fkey"
                                 referencedTableName="referee"
                                 referencedColumnNames="referee_id"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"/>

    </changeSet>

</databaseChangeLog>